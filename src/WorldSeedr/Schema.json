Possibility = {
    "width": Number,
    "height": Number,
    "contents": PossibilityContents
};

PossibilityContents = {
    "mode": ["Random", "Certain", "Multiple"],
    "direction": ["top", "right", "bottom", "left"],
    "snap": ["top", "right", "bottom", "left"],
    "spacing": Spacing, // optional
    "children": [Child, ...]
};

Child = {
    "percent": Number, // required if Possibility.children.mode = "Random"
    "type": ["Known", "Random", "Final"],
    "title": String, //
    "source": String, // required if type = "Final"
    "stretch": { // optional
        "width": Boolean, // optional
        "height": Boolean // optional
    },
    "arguments": Object // optional
};

Spacing = // one of
    Number
    [Number, Number]
    [SpacingChoice, ...]
    SpacingContents
    {
        "min": Number,
        "max": Number,
        "units": Number // optional
    }

SpacingChoice = {
    "percent": Number,
    "value": Spacing
};

SpacingContents = {
    "mode": ["Random", "Certain"],
    "children": [Child, ...]
};


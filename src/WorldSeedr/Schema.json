Possibility = {
    "width": Number,
    "height": Number,
    // "widthConstant": Boolean,
    // "heightConstant": Boolean,
    "contents": {
        "direction": ["top", "right", "bottom", "left"],
        "mode": ["Random", "Certain", "Multiple"],
        "spacing": Spacing, // optional
        "children": [Child, ...]
    }
};

Child = {
    "percent": Number, // required if Possibility.children.mode = "Random"
    "type": ["Known", "Random", "Final"],
    "title": String, // required if type = "Final"
    "source": String, // 
    "stretch": { // optional
        "width": Boolean, // optional
        "height": Boolean // optional
    },
    "arguments": Object // optional
};

Spacing = // one of
    Number
    [Number, Number]
    [SpacingChoice, ...]
    {
        "min": Number,
        "max": Number,
        "units": Number // optional
    }

SpacingChoice = {
    "percent": Number,
    "value": Number
}


